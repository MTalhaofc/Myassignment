<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/btn_back"


            />

        <TextView
            android:id="@+id/tv_e_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="37dp"
            android:layout_toRightOf="@+id/img_back"
            android:text="Top Up E-Wallet"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_e_wallet_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="90dp"
            android:text="Enter the amount of top up"
            android:textSize="14sp"

            />

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/tv_e_wallet_description"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/amount_screen_wallet"
            android:gravity="center"
            android:hint="$100,000"
            android:inputType="phone"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/black"/>

        <GridLayout
            android:id="@+id/grid_e_amount_cards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_e_wallet_description"
            android:layout_marginTop="120dp"
            android:background="@android:color/transparent"
            android:columnCount="3"
            android:rowCount="3">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:background="@android:color/transparent"

                >

                <TextView

                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="35dp"
                    android:background="@drawable/amount_screen_wallet"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="$10,000"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1">

                <TextView

                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="35dp"
                    android:background="@drawable/amount_screen_wallet"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="$50,000"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2">

                <TextView

                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="35dp"
                    android:background="@drawable/amount_screen_wallet"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="$100,000"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginTop="10dp">

                <TextView

                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="35dp"
                    android:background="@drawable/amount_screen_wallet"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="$150,000"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_marginTop="10dp">

                <TextView

                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="35dp"
                    android:background="@drawable/amount_screen_wallet"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="$200,000"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_marginTop="10dp">

                <TextView

                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="35dp"
                    android:background="@drawable/amount_screen_wallet"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="$250,000"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginTop="10dp">

                <TextView

                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="35dp"
                    android:background="@drawable/amount_screen_wallet"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="$500,000"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"

                android:layout_marginTop="10dp">

                <TextView

                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="35dp"
                    android:background="@drawable/amount_screen_wallet"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="$750,000"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_marginTop="10dp">

                <TextView

                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="35dp"
                    android:background="@drawable/amount_screen_wallet"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="$100,000"
                    android:textColor="@color/black"
                    android:textSize="17sp" />
            </androidx.cardview.widget.CardView>

        </GridLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grid_e_amount_cards"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_black"
            android:text="Continue"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
android:id="@+id/btn_continue_amount_screen"

            />
    </RelativeLayout>

</RelativeLayout>