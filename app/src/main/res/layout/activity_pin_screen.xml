<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/img_back"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/btn_back"


        />

    <TextView
        android:id="@+id/tv_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="37dp"
        android:layout_toRightOf="@+id/img_back"
        android:text="Enter Your Pin"
        android:textSize="25sp"
        android:textStyle="bold"


        />

    <TextView
        android:id="@+id/tv_pin_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_pin"
        android:layout_marginStart="18dp"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:text="Enter your PIN to confirm top up"
        android:textSize="14sp"

        />

    <LinearLayout
        android:id="@+id/img_pin_inputs"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="8dp"
        android:layout_below="@+id/tv_pin_description">

        <EditText

            android:layout_width="94dp"
            android:layout_height="84dp"
            android:layout_margin="5dp"
            android:hint="0"

            android:background="@drawable/pin_screen_input"
            android:inputType="numberPassword"
            android:textStyle="bold"
            android:textSize="50sp"
            android:gravity="center"
            android:foregroundGravity="center_horizontal"
            />

        <EditText

            android:layout_width="94dp"
            android:layout_height="84dp"
            android:layout_margin="5dp"
            android:background="@drawable/pin_screen_input"
            android:inputType="numberPassword"
            android:textStyle="bold"
            android:textSize="50sp"
            android:gravity="center"
            android:foregroundGravity="center_horizontal"
            android:hint="0"

            />
        <EditText

            android:layout_width="94dp"
            android:layout_height="84dp"
            android:layout_margin="5dp"
            android:background="@drawable/pin_screen_input"
            android:inputType="numberPassword"
            android:textStyle="bold"
            android:textSize="50sp"
            android:gravity="center"
            android:foregroundGravity="center_horizontal"
            android:hint="0"

            />


        <EditText

            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_margin="5dp"
            android:background="@drawable/pin_screen_input"
            android:inputType="numberPassword"
            android:textStyle="bold"
            android:textSize="50sp"
            android:gravity="center"
            android:foregroundGravity="center_horizontal"
            android:hint="0"

            />



    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_pin_inputs"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_black"
        android:text="Continue"
        android:textColor="@color/white"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
android:id="@+id/btn_continue_pin_screen"

        />


</RelativeLayout>